{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ES2020",
    "baseUrl": "src/.",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@contexts/*": ["contexts/*"],
      "@hooks/*": ["hooks/*"],
      "@screens/*": ["screens/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@config/*": ["config/*"],
    },
  },
}
